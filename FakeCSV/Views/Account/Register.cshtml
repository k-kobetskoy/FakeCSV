@model RegisterViewModel
@{
    Layout = "_Layout";
}

<header>
    <partial name="Partial/_NavbarLoginPage" />
</header>

<div class="container d-flex justify-content-center">
    <div class="card">
        <div class="card-body d-flex flex-column align-items-center">
            <form asp-controller="Account" asp-action="Register" class="text-center">
                <h1 class="fs-3 mb-5 ">Register</h1>


                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div>
                    <label asp-for="Email" class="invisible">Email</label>
                    <input asp-for="Email" type="text" class="form-control" placeholder="Email">
                    <small><span asp-validation-for="Email" class="text-danger"></span></small>
                </div>

                <div>
                    <label asp-for="Password" class="invisible">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                    <small><span asp-validation-for="Password" class="text-danger"></span></small>
                </div>

                <div class="mb-4">
                    <label asp-for="PasswordConfirmation" class="invisible">Password confirmation</label>
                    <input asp-for="PasswordConfirmation" type="password" class="form-control" placeholder="Password confirmation">
                    <small><span asp-validation-for="PasswordConfirmation" class="text-danger"></span></small>
                </div>

                <button type="submit" class="btn btn-primary px-4 float-end">Sign up</button>
            </form>
        </div>
    </div>
</div>

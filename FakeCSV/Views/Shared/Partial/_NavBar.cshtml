<nav class="navbar navbar-expand-sm navbar-light mb-5">
    <div class="container-md d-md-flex justify-content-md-between">


        <div class="d-flex flex-nowrap">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">FakeCSV</a>
            @if (User.Identity is not null && User.Identity.IsAuthenticated)
            {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Schemas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="DataSets" asp-action="Index">Data sets</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-controller="NewSchema" asp-action="Index">New schema</a>
                    </li>
                </ul>
            }
        </div>
        @if (User.Identity is not null && User.Identity.IsAuthenticated)
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <button class="nav-link btn-link btn" disabled>Hello, @User.Identity.Name</button>
                </li>
                <li class="nav-item ">
                    <form  method="post" asp-controller="Account" asp-action="Logout">
                        <button class="nav-link btn-link btn" type="submit">Logout</button> 
                    </form>
                </li>
            </ul>
        }
        else
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                </li>
            </ul>

        }
    </div>
